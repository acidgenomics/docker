#!/usr/bin/env bash
set -Eeu -o pipefail

# Add Docker tag.
# Modified 2019-09-18.

repo="acidgenomics/$1"
source_tag="${2:-bioc-release}"
dest_tag="${3:-latest}"

docker login
docker pull "${repo}:${source_tag}"
docker tag "${repo}:${source_tag}" "${repo}:${dest_tag}"
docker push "${repo}:${dest_tag}"

