#!/usr/bin/env bash
set -Eeu -o pipefail

# """
# Build all Acid Genomics images.
# Updated 2019-10-30.
# """

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
build="${script_dir}/docker-build-all-tags"

# Ensure we're working from a clean Docker installation.
# > docker system prune --all --force

# R images
"$build" acidgenomics/bioconductor
"$build" acidgenomics/basejump
"$build" acidgenomics/bcbiornaseq
"$build" acidgenomics/bcbiosinglecell
"$build" acidgenomics/rnaseq
"$build" acidgenomics/singlecell

# Linux images
# > "$build" acidgenomics/debian
# > "$build" acidgenomics/fedora
# > "$build" acidgenomics/ubuntu
# > "$build" acidgenomics/alpine
# > "$build" acidgenomics/amazonlinux
# > "$build" acidgenomics/archlinux
# > "$build" acidgenomics/centos
# > "$build" acidgenomics/kali
# > "$build" acidgenomics/opensuse

# Bioinformatics software
# > "$build" acidgenomics/rnaeditingindexer
# > "$build" acidgenomics/maestro
